@{
    ViewData["Title"] = "Sistem Ayarları";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">Sistem Ayarları</h1>
</div>

<div class="row">
    <!-- Kullanıcı Yönetimi -->
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="bi bi-people-fill text-primary" style="font-size: 3rem;"></i>
                </div>
                <h5 class="card-title">Kullanıcı Yönetimi</h5>
                <p class="card-text text-muted">Sistem kullanıcılarını yönetin, yeni kullanıcılar ekleyin ve mevcut kullanıcıları düzenleyin.</p>
                <a asp-controller="User" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-arrow-right me-2"></i>
                    Kullanıcıları Yönet
                </a>
            </div>
        </div>
    </div>

    <!-- Rol Yönetimi -->
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="bi bi-shield-check text-success" style="font-size: 3rem;"></i>
                </div>
                <h5 class="card-title">Rol Yönetimi</h5>
                <p class="card-text text-muted">Sistem rollerini tanımlayın ve kullanıcılara rol atamaları yapın.</p>
                <a asp-controller="Role" asp-action="Index" class="btn btn-success">
                    <i class="bi bi-arrow-right me-2"></i>
                    Rolleri Yönet
                </a>
            </div>
        </div>
    </div>

    <!-- Menü Yönetimi -->
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="bi bi-list-ul text-info" style="font-size: 3rem;"></i>
                </div>
                <h5 class="card-title">Menü Yönetimi</h5>
                <p class="card-text text-muted">Sistem menülerini düzenleyin ve yeni menü öğeleri ekleyin.</p>
                <a asp-controller="Menu" asp-action="Index" class="btn btn-info">
                    <i class="bi bi-arrow-right me-2"></i>
                    Menüleri Yönet
                </a>
            </div>
        </div>
    </div>

    <!-- Yetki Yönetimi -->
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="bi bi-key text-warning" style="font-size: 3rem;"></i>
                </div>
                <h5 class="card-title">Yetki Yönetimi</h5>
                <p class="card-text text-muted">Sistem yetkilerini tanımlayın ve kullanıcılara yetki atamaları yapın.</p>
                <a asp-controller="Permission" asp-action="Index" class="btn btn-warning">
                    <i class="bi bi-arrow-right me-2"></i>
                    Yetkileri Yönet
                </a>
            </div>
        </div>
    </div>

    <!-- Sistem Bilgileri -->
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="bi bi-gear text-secondary" style="font-size: 3rem;"></i>
                </div>
                <h5 class="card-title">Sistem Bilgileri</h5>
                <p class="card-text text-muted">Sistem konfigürasyonu ve genel ayarları yönetin.</p>
                <button class="btn btn-secondary" disabled>
                    <i class="bi bi-arrow-right me-2"></i>
                    Yakında Gelecek
                </button>
            </div>
        </div>
    </div>

    <!-- Veritabanı Yönetimi -->
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="bi bi-database text-dark" style="font-size: 3rem;"></i>
                </div>
                <h5 class="card-title">Veritabanı Yönetimi</h5>
                <p class="card-text text-muted">Veritabanı yedekleme ve geri yükleme işlemleri.</p>
                <button class="btn btn-dark" disabled>
                    <i class="bi bi-arrow-right me-2"></i>
                    Yakında Gelecek
                </button>
            </div>
        </div>
    </div>
</div>

<!-- İstatistikler -->
<div class="row mt-5">
    <div class="col-12">
        <h4 class="mb-3">Sistem İstatistikleri</h4>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <h3 class="card-title" id="totalUsers">-</h3>
                <p class="card-text">Toplam Kullanıcı</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <h3 class="card-title" id="totalRoles">-</h3>
                <p class="card-text">Toplam Rol</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h3 class="card-title" id="totalMenus">-</h3>
                <p class="card-text">Toplam Menü</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-warning text-white">
            <div class="card-body text-center">
                <h3 class="card-title" id="totalPermissions">-</h3>
                <p class="card-text">Toplam Yetki</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // İstatistikleri yükle
            loadStatistics();
        });

        function loadStatistics() {
            // Bu fonksiyon gerçek verilerle doldurulabilir
            // Şimdilik örnek değerler
            $('#totalUsers').text('12');
            $('#totalRoles').text('5');
            $('#totalMenus').text('15');
            $('#totalPermissions').text('25');
        }
    </script>
}
