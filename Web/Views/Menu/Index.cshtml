@{
    ViewData["Title"] = "Menü Yönetimi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="bi bi-list-ul me-2"></i>
        Menü Yönetimi
    </h1>
    <div class="d-flex gap-2">
        <button class="btn btn-outline-primary" id="refreshBtn" title="Yenile">
            <i class="bi bi-arrow-clockwise"></i>
        </button>
        <button class="btn btn-outline-success" id="exportBtn" title="Excel'e Aktar">
            <i class="bi bi-file-earmark-excel"></i>
        </button>
        <button class="btn btn-primary" id="addMenuBtn">
            <i class="bi bi-plus-circle me-2"></i>
            Yeni Menü
        </button>
    </div>
</div>

<!-- DevExtreme DataGrid -->
<div class="card shadow-sm">
    <div class="card-body p-0">
        <div id="menusDataGrid"></div>
    </div>
</div>

<!-- Menu Edit Modal -->
<div class="modal fade" id="menuModal" tabindex="-1" aria-labelledby="menuModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-slide">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="menuModalLabel">
                    <i class="bi bi-list-ul me-2"></i>
                    Yeni Menü
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="menuForm">
                    <input type="hidden" id="menuId" name="Id" value="0">
                    
                    <div class="mb-3">
                        <label for="menuName" class="form-label">
                            <i class="bi bi-tag me-1"></i>
                            Menü Adı <span class="text-danger">*</span>
                        </label>
                        <input type="text" class="form-control" id="menuName" name="Name" required>
                        <div class="invalid-feedback"></div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="menuDescription" class="form-label">
                            <i class="bi bi-card-text me-1"></i>
                            Açıklama
                        </label>
                        <textarea class="form-control" id="menuDescription" name="Description" rows="3"></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label for="menuIcon" class="form-label">
                            <i class="bi bi-image me-1"></i>
                            İkon
                        </label>
                        <input type="text" class="form-control" id="menuIcon" name="Icon" placeholder="bi bi-house">
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="menuController" class="form-label">
                                    <i class="bi bi-gear me-1"></i>
                                    Controller
                                </label>
                                <input type="text" class="form-control" id="menuController" name="Controller">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="menuAction" class="form-label">
                                    <i class="bi bi-play me-1"></i>
                                    Action
                                </label>
                                <input type="text" class="form-control" id="menuAction" name="Action">
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="menuUrl" class="form-label">
                            <i class="bi bi-link me-1"></i>
                            URL
                        </label>
                        <input type="text" class="form-control" id="menuUrl" name="Url">
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="menuParentId" class="form-label">
                                    <i class="bi bi-diagram-3 me-1"></i>
                                    Üst Menü ID
                                </label>
                                <input type="number" class="form-control" id="menuParentId" name="ParentId" min="0">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="menuSortOrder" class="form-label">
                                    <i class="bi bi-sort-numeric-down me-1"></i>
                                    Sıra
                                </label>
                                <input type="number" class="form-control" id="menuSortOrder" name="SortOrder" min="0" value="0">
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="menuIsActive" name="IsActive" checked>
                                    <label class="form-check-label" for="menuIsActive">
                                        <i class="bi bi-toggle-on me-1"></i>
                                        Aktif
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="menuIsVisible" name="IsVisible" checked>
                                    <label class="form-check-label" for="menuIsVisible">
                                        <i class="bi bi-eye me-1"></i>
                                        Görünür
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="cancelMenuBtn">
                    <i class="bi bi-x-lg me-1"></i>
                    İptal
                </button>
                <button type="button" class="btn btn-primary" id="saveMenuBtn">
                    <i class="bi bi-check-lg me-1"></i>
                    Kaydet
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Menü Silme Onayı
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Bu menüyü silmek istediğinizden emin misiniz?</p>
                <p class="text-muted small">Bu işlem geri alınamaz ve menü pasif hale getirilecektir.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Sil</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- DevExtreme Common CSS -->
    <link rel="stylesheet" href="~/css/devxtreme-common.css" />
    
    <!-- Menu Management CSS -->
    <link rel="stylesheet" href="~/css/menu-management.css" />
    
    <!-- Menu Management JS -->
    <script src="~/js/menu-management.js"></script>
    
    <script>
        // View permission flags for Menu page via dynamic menu resolution
        window.menuPermissions = {
            canCreate: @Json.Serialize(await Context.RequestServices.HasPermissionAsync(User, "Menu_Index_CREATE")),
            canView: @Json.Serialize(await Context.RequestServices.HasPermissionAsync(User, "Menu_Index_VIEW")),
            canEdit: @Json.Serialize(await Context.RequestServices.HasPermissionAsync(User, "Menu_Index_EDIT")),
            canDelete: @Json.Serialize(await Context.RequestServices.HasPermissionAsync(User, "Menu_Index_DELETE"))
        };
    </script>
}