@{
    ViewData["Title"] = "Yetki Yönetimi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="bi bi-shield-check me-2"></i>
        Yetki Yönetimi
    </h1>
    <div class="d-flex gap-2">
        <button class="btn btn-outline-primary" id="refreshBtn" title="Yenile">
            <i class="bi bi-arrow-clockwise"></i>
        </button>
        <button class="btn btn-outline-success" id="exportBtn" title="Excel'e Aktar">
            <i class="bi bi-file-earmark-excel"></i>
        </button>
        <button class="btn btn-primary" id="addPermissionBtn">
            <i class="bi bi-plus-circle me-2"></i>
            Yeni Yetki
        </button>
    </div>
</div>

<!-- DevExtreme DataGrid -->
<div class="card shadow-sm">
    <div class="card-body p-0">
        <div id="permissionsDataGrid"></div>
    </div>
</div>

<!-- Permission Edit Modal -->
<div class="modal fade" id="permissionModal" tabindex="-1" aria-labelledby="permissionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-slide">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="permissionModalLabel">
                    <i class="bi bi-shield-check me-2"></i>
                    Yeni Yetki
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="permissionForm">
                    <input type="hidden" id="permissionId" name="Id" value="0">
                    
                    <div class="mb-3">
                        <label for="permissionName" class="form-label">
                            <i class="bi bi-tag me-1"></i>
                            Yetki Adı <span class="text-danger">*</span>
                        </label>
                        <input type="text" class="form-control" id="permissionName" name="Name" required>
                        <div class="invalid-feedback"></div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="permissionCode" class="form-label">
                            <i class="bi bi-code me-1"></i>
                            Yetki Kodu <span class="text-danger">*</span>
                        </label>
                        <input type="text" class="form-control" id="permissionCode" name="Code" required placeholder="VIEW, CREATE, EDIT, DELETE">
                        <div class="invalid-feedback"></div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="permissionDescription" class="form-label">
                            <i class="bi bi-card-text me-1"></i>
                            Açıklama
                        </label>
                        <textarea class="form-control" id="permissionDescription" name="Description" rows="3"></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="permissionIsActive" name="IsActive" checked>
                            <label class="form-check-label" for="permissionIsActive">
                                <i class="bi bi-toggle-on me-1"></i>
                                Aktif
                            </label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="cancelPermissionBtn">
                    <i class="bi bi-x-lg me-1"></i>
                    İptal
                </button>
                <button type="button" class="btn btn-primary" id="savePermissionBtn">
                    <i class="bi bi-check-lg me-1"></i>
                    Kaydet
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Yetki Silme Onayı
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Bu yetkiyi silmek istediğinizden emin misiniz?</p>
                <p class="text-muted small">Bu işlem geri alınamaz ve yetki pasif hale getirilecektir.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Sil</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- DevExtreme Common CSS -->
    <link rel="stylesheet" href="~/css/devxtreme-common.css" />
    
    <!-- Permission Management CSS -->
    <link rel="stylesheet" href="~/css/permission-management.css" />
    
    <!-- Permission Management JS -->
    <script src="~/js/permission-management.js"></script>
    
    <script>
        // View permission flags for Permission page via dynamic menu resolution
        window.permissionPermissions = {
            canCreate: @Json.Serialize(await Context.RequestServices.HasPermissionAsync(User, "Permission_Index_CREATE")),
            canView: @Json.Serialize(await Context.RequestServices.HasPermissionAsync(User, "Permission_Index_VIEW")),
            canEdit: @Json.Serialize(await Context.RequestServices.HasPermissionAsync(User, "Permission_Index_EDIT")),
            canDelete: @Json.Serialize(await Context.RequestServices.HasPermissionAsync(User, "Permission_Index_DELETE"))
        };
    </script>
}