                $("#mobilePhone").val(customer.MobilePhone);
                $("#email").val(customer.Email);
                $("#website").val(customer.Website);
                $("#linkedin").val(customer.LinkedIn);
                $("#twitter").val(customer.Twitter);
                
                // Adres
                $("#address").val(customer.Address);
                $("#city").val(customer.City);
                $("#state").val(customer.State);
                $("#postalCode").val(customer.PostalCode);
                $("#country").val(customer.Country);
                $("#deliveryAddress").val(customer.DeliveryAddress);
                $("#deliveryCity").val(customer.DeliveryCity);
                $("#deliveryPostalCode").val(customer.DeliveryPostalCode);
                
