                // Banka
                $("#bankName").val(customer.BankName);
                $("#bankBranch").val(customer.BankBranch);
                $("#bankAccountNumber").val(customer.BankAccountNumber);
                $("#iban").val(customer.Iban);
                $("#swiftCode").val(customer.SwiftCode);
                
                // Ticari
                $("#tradeRegistryNumber").val(customer.TradeRegistryNumber);
                $("#chamberOfCommerce").val(customer.ChamberOfCommerce);
                $("#mersisNumber").val(customer.MersisNumber);
                $("#activityCode").val(customer.ActivityCode);
                $("#activityDescription").val(customer.ActivityDescription);
                $("#paymentMethod").val(customer.PaymentMethod);
                $("#paymentTermDays").val(customer.PaymentTermDays);
                $("#creditLimit").val(customer.CreditLimit);
                $("#discountRate").val(customer.DiscountRate);
                $("#currency").val(customer.Currency);
                
                // E-Fatura
                $("#isEInvoiceEnabled").prop("checked", customer.IsEInvoiceEnabled);
                $("#isEArchiveEnabled").prop("checked", customer.IsEArchiveEnabled);
                $("#eInvoiceProfile").val(customer.EInvoiceProfile);
                $("#eArchiveProfile").val(customer.EArchiveProfile);
                
                // Diğer
                $("#notes").val(customer.Notes);
                $("#internalNotes").val(customer.InternalNotes);
                $("#source").val(customer.Source);
                $("#language").val(customer.Language);
            }

            // Form sıfırlama
            function resetForm() {
                $("#customerForm")[0].reset();
                $("#customerId").val("");
                $("#country").val("Türkiye");
                $("#currency").val("TRY");
                $("#language").val("tr-TR");
                $("#isActive").prop("checked", true);
            }

            // Müşteri kaydetme
            $("#saveCustomerBtn").click(function() {
                var formData = $("#customerForm").serializeArray();
                var customerData = {};
                
                $.each(formData, function(i, field) {
                    customerData[field.name] = field.value;
                });

                // Boolean değerleri düzelt
                customerData.IsActive = $("#isActive").is(":checked");
                customerData.IsEInvoiceEnabled = $("#isEInvoiceEnabled").is(":checked");
                customerData.IsEArchiveEnabled = $("#isEArchiveEnabled").is(":checked");
                
                // Sayısal değerleri düzelt
                if (customerData.PaymentTermDays && customerData.PaymentTermDays !== "") {
                    customerData.PaymentTermDays = parseInt(customerData.PaymentTermDays);
                } else {
                    customerData.PaymentTermDays = null;
                }
                
                if (customerData.CreditLimit && customerData.CreditLimit !== "") {
                    customerData.CreditLimit = parseFloat(customerData.CreditLimit);
                } else {
                    customerData.CreditLimit = null;
                }
                
                if (customerData.DiscountRate && customerData.DiscountRate !== "") {
                    customerData.DiscountRate = parseFloat(customerData.DiscountRate);
                } else {
                    customerData.DiscountRate = null;
                }

                // Debug bilgisi
                console.log("Gönderilen veri:", customerData);
                console.log("ID değeri:", customerData.Id);

                var url = customerData.Id ? "/Customers/UpdateCustomerJson" : "/Customers/CreateCustomerJson";
                var method = customerData.Id ? "POST" : "POST";

                $.ajax({
                    url: url,
                    type: method,
                    contentType: "application/json",
                    data: JSON.stringify(customerData),
                    success: function(response) {
