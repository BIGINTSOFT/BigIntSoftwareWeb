        <div class="modal-content modern-modal">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="userSystemPermissionsModalLabel">
                    <i class="bi bi-gear me-2"></i>
                    Kullanıcı Sistem Yetkileri
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Kullanıcı Bilgileri Kartı -->
                <div class="card mb-4 border-0 shadow-sm">
                    <div class="card-body bg-light">
                        <div class="row align-items-center">
                            <div class="col-auto">
                                <div class="avatar-circle bg-info text-white">
                                    <i class="bi bi-person-fill fs-4"></i>
                                </div>
                            </div>
                            <div class="col">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h6 class="mb-1 text-muted">Kullanıcı Adı</h6>
                                        <p class="mb-0 fw-bold" id="modalPermissionUserName">-</p>
                                    </div>
                                    <div class="col-md-3">
                                        <h6 class="mb-1 text-muted">Ad Soyad</h6>
                                        <p class="mb-0 fw-bold" id="modalPermissionUserFullName">-</p>
                                    </div>
                                    <div class="col-md-3">
                                        <h6 class="mb-1 text-muted">E-mail</h6>
                                        <p class="mb-0 fw-bold" id="modalPermissionUserEmail">-</p>
                                    </div>
                                    <div class="col-md-3">
                                        <h6 class="mb-1 text-muted">Durum</h6>
                                        <span class="badge" id="modalPermissionUserStatus">-</span>
                                    </div>
                                </div>
                            </div>
