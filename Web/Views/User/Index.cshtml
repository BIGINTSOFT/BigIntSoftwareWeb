                    <i class="bi bi-x-lg me-2"></i>
                    Kapat
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- DevExtreme CSS -->
    <link rel="stylesheet" href="~/css/devxtreme-common.css" />
    <!-- User Management CSS -->
    <link rel="stylesheet" href="~/css/user-management.css" />
    
    <!-- User Management JS -->
    <script src="~/js/user-management.js"></script>
    
    <script>
        // Permission kontrolü için JavaScript değişkenleri
        window.userPermissions = {
            canCreate: @Json.Serialize(await Context.RequestServices.HasPermissionAsync(User, "User_Index_CREATE")),
            canEdit: @Json.Serialize(await Context.RequestServices.HasPermissionAsync(User, "User_Index_EDIT")),
            canDelete: @Json.Serialize(await Context.RequestServices.HasPermissionAsync(User, "User_Index_DELETE")),
            canView: @Json.Serialize(await Context.RequestServices.HasPermissionAsync(User, "User_Index_VIEW"))
        };
    </script>
}
