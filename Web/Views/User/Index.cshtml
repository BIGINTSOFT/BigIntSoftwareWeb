            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="userMenuPermissionsModalLabel">
                    <i class="bi bi-list-ul me-2"></i>
                    Kullanıcı Menü Yetkileri
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Kullanıcı Bilgileri Kartı -->
                <div class="card mb-4 border-0 shadow-sm">
                    <div class="card-body bg-light">
                        <div class="row align-items-center">
                            <div class="col-auto">
                                <div class="avatar-circle bg-warning text-dark">
                                    <i class="bi bi-person-fill fs-4"></i>
                                </div>
                            </div>
                            <div class="col">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h6 class="mb-1 text-muted">Kullanıcı Adı</h6>
                                        <p class="mb-0 fw-bold" id="modalMenuUserName">-</p>
                                    </div>
                                    <div class="col-md-3">
                                        <h6 class="mb-1 text-muted">Ad Soyad</h6>
                                        <p class="mb-0 fw-bold" id="modalMenuUserFullName">-</p>
                                    </div>
                                    <div class="col-md-3">
                                        <h6 class="mb-1 text-muted">E-mail</h6>
                                        <p class="mb-0 fw-bold" id="modalMenuUserEmail">-</p>
                                    </div>
                                    <div class="col-md-3">
                                        <h6 class="mb-1 text-muted">Durum</h6>
                                        <span class="badge" id="modalMenuUserStatus">-</span>
                                    </div>
