                    </div>
                </div>

                <!-- Bilgilendirme Mesajları -->
                <div id="permissionModalAlert" class="alert alert-dismissible fade" role="alert" style="display: none;">
                    <span id="permissionModalAlertMessage"></span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>

                <div class="row">
                    <!-- Mevcut Sistem Yetkileri -->
                    <div class="col-lg-6">
                        <div class="card border-info">
                            <div class="card-header bg-info text-white">
                                <h6 class="mb-0">
                                    <i class="bi bi-gear me-2"></i>
                                    Kullanıcının Sistem Yetkileri
                                </h6>
                            </div>
                            <div class="card-body p-0">
                                <div style="height: 400px; overflow-y: auto;">
                                    <div id="assignedUserPermissionsList" class="p-3">
