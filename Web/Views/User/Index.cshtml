@using Web.Helpers


@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-1">Kullanıcı Yönetimi</h1>
        <p class="text-muted mb-0">Sistem kullanıcılarını yönetin</p>
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-success" id="refreshBtn" title="Yenile">
            <i class="bi bi-arrow-clockwise me-2"></i>
            Yenile
        </button>
        <button class="btn btn-info" id="exportBtn" title="Dışa Aktar">
            <i class="bi bi-download me-2"></i>
            Dışa Aktar
        </button>
        @if (await Context.RequestServices.HasPermissionAsync(User, "User_Index_CREATE"))
        {
            <button class="btn btn-primary" id="addUserBtn">
                <i class="bi bi-person-plus me-2"></i>
                Yeni Kullanıcı
            </button>
        }
    </div>
</div>

<!-- DevExtreme DataGrid -->
<div id="usersDataGrid" class="dx-datagrid-container"></div>

<!-- User Modal -->
<div class="modal fade" id="userModal" tabindex="-1" aria-labelledby="userModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-slide modal-lg">
        <div class="modal-content modern-modal">
            <div class="modal-header">
                <h5 class="modal-title" id="userModalLabel">Kullanıcı Bilgileri</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="userForm">
                    <input type="hidden" id="userId" name="Id" />
                    
                    <!-- Kullanıcı Adı -->
                    <div class="mb-3">
                        <label for="username" class="form-label">Kullanıcı Adı <span class="text-danger">*</span></label>
                        <input type="text" class="form-control form-control-sm" id="username" name="Username" required>
                        <div class="invalid-feedback"></div>
                    </div>
                    
                    <!-- Email -->
                    <div class="mb-3">
                        <label for="email" class="form-label">Email <span class="text-danger">*</span></label>
                        <input type="email" class="form-control form-control-sm" id="email" name="Email" required>
                        <div class="invalid-feedback"></div>
                    </div>
                    
                    <!-- Ad -->
                    <div class="mb-3">
                        <label for="firstName" class="form-label">Ad <span class="text-danger">*</span></label>
                        <input type="text" class="form-control form-control-sm" id="firstName" name="FirstName" required>
                        <div class="invalid-feedback"></div>
                    </div>
                    
                    <!-- Soyad -->
                    <div class="mb-3">
                        <label for="lastName" class="form-label">Soyad <span class="text-danger">*</span></label>
                        <input type="text" class="form-control form-control-sm" id="lastName" name="LastName" required>
                        <div class="invalid-feedback"></div>
                    </div>
                    
                    <!-- Şifre -->
                    <div class="mb-3">
                        <label for="password" class="form-label">
                            Şifre <span class="text-danger">*</span>
                            <small class="text-muted" id="passwordHelp">(Düzenleme için boş bırakabilirsiniz)</small>
                        </label>
                        <div class="input-group">
                            <input type="password" class="form-control form-control-sm" id="password" name="Password">
                            <button class="btn btn-outline-info btn-sm" type="button" id="togglePasswordBtn">
                                <i class="bi bi-eye" id="togglePasswordIcon"></i>
                            </button>
                            <button class="btn btn-outline-secondary btn-sm" type="button" id="generatePasswordBtn" style="display: none;">
                                <i class="bi bi-key"></i>
                            </button>
                            <button class="btn btn-outline-warning btn-sm" type="button" id="resetPasswordBtn" style="display: none;">
                                <i class="bi bi-arrow-clockwise"></i>
                            </button>
                        </div>
                        <div class="invalid-feedback"></div>
                    </div>
                    
                    <!-- Durum -->
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="isActive" name="IsActive" checked>
                            <label class="form-check-label" for="isActive">
                                Aktif Kullanıcı
                            </label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="cancelUserBtn">
                    <i class="bi bi-x-lg me-2"></i>
                    İptal
                </button>
                <button type="button" class="btn btn-primary" id="saveUserBtn">
                    <i class="bi bi-check-lg me-2"></i>
                    Kaydet
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Kullanıcı Sil</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Bu kullanıcıyı silmek istediğinizden emin misiniz?</p>
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Bu işlem geri alınamaz!
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <i class="bi bi-trash me-2"></i>
                    Sil
                </button>
            </div>
        </div>
    </div>
</div>

<!-- User Role Management Modal -->
