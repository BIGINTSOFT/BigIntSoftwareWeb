                    </div>
                </div>

                <!-- Bilgilendirme Mesajları -->
                <div id="menuModalAlert" class="alert alert-dismissible fade" role="alert" style="display: none;">
                    <span id="menuModalAlertMessage"></span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>

                <div class="row">
                    <!-- Mevcut Menü Yetkileri -->
                    <div class="col-lg-6">
                        <div class="card border-warning">
                            <div class="card-header bg-warning text-dark">
                                <h6 class="mb-0">
                                    <i class="bi bi-list-ul me-2"></i>
                                    Kullanıcının Menü Yetkileri
                                </h6>
                            </div>
                            <div class="card-body p-0">
                                <div style="height: 400px; overflow-y: auto;">
                                    <div id="assignedUserMenusList" class="p-3">
                                        <!-- AJAX ile doldurulacak -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Menü Yetkisi Ekleme -->
                    <div class="col-lg-6">
                        <div class="card border-success">
                            <div class="card-header bg-success text-white">
                                <h6 class="mb-0">
                                    <i class="bi bi-plus-circle me-2"></i>
                                    Yeni Menü Yetkisi Ekle
                                </h6>
                            </div>
                            <div class="card-body p-0">
                                <div class="p-3 border-bottom">
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-light">
                                            <i class="bi bi-search"></i>
                                        </span>
                                        <input type="text" class="form-control form-control-sm" id="menuSearchInput" 
                                               placeholder="Menü ara...">
                                    </div>
                                </div>
                                <div style="height: 350px; overflow-y: auto;">
                                    <div id="availableUserMenusList" class="p-3">
                                        <!-- AJAX ile doldurulacak -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-lg me-2"></i>
                    Kapat
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- User Management JS -->
    <script src="~/js/user-management.js"></script>
    
    <script>
        // Permission kontrolü için JavaScript değişkenleri
        window.userPermissions = {
            canCreate: @Json.Serialize(await Context.RequestServices.HasPermissionAsync(User, "CREATE", 2)),
            canEdit: @Json.Serialize(await Context.RequestServices.HasPermissionAsync(User, "EDIT", 2)),
            canDelete: @Json.Serialize(await Context.RequestServices.HasPermissionAsync(User, "DELETE", 2)),
            canView: @Json.Serialize(await Context.RequestServices.HasPermissionAsync(User, "VIEW", 2))
        };
    </script>
}
